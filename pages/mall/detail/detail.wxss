page {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-x:scroll !important;
overflow:scroll;

}

/* 轮播 */

swiper {
  /* height: 500rpx; */
  height: 600rpx;
  background: #f3f4f6;
  text-align: center;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/**图文详情 浮层**/

.tab-bar-detail {
  width: 75rpx;
  height: 75rpx;
  background-color: #fff;
  border-radius: 25px;
  position: fixed;
  z-index: 2;
  right: 4%;
  top: 500rpx;
  border: 1rpx solid #f3f4f6;
  line-height: 25rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tab-bar-detail text {
  font-size: 22rpx;
  color: #e80080;
}

/**商品价格**/

 .price{
  /* border: 2rpx solid black;
  width: 100%;
  height: 50px; */
  margin-top: 100rpx;
  margin-left: 20rpx;
} 
.product-price-wrap {
  display: flex;
  justify-content: space-between; /**两边对齐**/
  flex-direction: row;
  flex-wrap: wrap;
  margin: 5px 5px;
  margin-top:-50px;

  /* border:1rpx solid red;  */
}

.product-price-wrap .product-price-new {
  color: #e80080;
  font-weight: 400;
  font-size: 30rpx;
}

.product-price-wrap .product-price-old {
  color: #888;
  text-decoration: line-through;
  padding-left: 5px;
  font-size: 10px;
  line-height: 30px;
  font-weight: 300;
}

.product-price-wrap .discount {
  margin: 5px 5px;
  background-color: #000;
  color: #fff;
  height: 18px;
  font-size: 14px;
  border-radius: 2px;
}

.product-price-wrap image {
  width: 40rpx;
  height: 40rpx;
  margin: 5px 5px;
}

.product-name-wrap {
  margin: 0px 10px;
  /* border:1rpx solid red; */
}

.product-name-wrap text {
  font-size: 14px;
  font-weight: 400;
  line-height: 0.48rem;
  color: #404040;
}

.details {
  /* border: 1px solid red; */
  /* padding: 0px 5px 0 15px; */
  margin-top: 150rpx;
  /* overflow: scroll */
}

.details image{
    width: 100%;
    height: 300rpx;
    overflow:scroll;

}

.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
/* 加入购物车 */
.bot_button{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  text-align: center;
  border-top: 2rpx #e5e5e5 solid;
}
.goods_tel{
  flex: 1;
  line-height: 100rpx;
}
.goods_tel image{
  width: 40rpx;
  height: 33rpx;
  vertical-align: middle;
}
.add_cart,.go_indent{
  flex: 2;
  font-size: 32rpx;
}
.add_cart{
  background: #e5e5e5;
  color: #666;
}
.go_indent{
  color: #fff;
  background: #ef0000;
}
