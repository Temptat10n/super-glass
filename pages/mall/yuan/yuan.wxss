/* 导航 */
.page {
  width: 100%;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.index_menu_list {
  width: 100%;
  white-space: nowrap;
  background: #efefef;
  margin-bottom: 10rpx;
}

.index_menu_li {
  width: 20%;
  display: inline-block;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 90rpx;
  margin: 0 2.5%;
}

.index_menu_li.active {
  color: #960;
  border-bottom: 2rpx #960 solid;
}

/* 导航 */
/* 商品展示 */
.all {
  border: 2rpx solid red;
  width: 100%;
  height: 3000rpx;
  position: relative;
  bottom: 150rpx;
}
.goods_main{
  width: 100%;
}
.goods_main_list{
  width: 46%;
  margin: 0 2% 20rpx;
  float: left;
  padding: 10rpx 0;
}
.goods_img{
  width: 100%;
  height: 226rpx;
}
.goods_title{
  font-size: 36rpx;
  color: #333;
  line-height: 1.5;
}
.goods_price{
  color: #f00;
  font-size: 32rpx;
}

