
.clear{
  clear: both;
}
.goods_cart_list {
  border-bottom: 2rpx #f5f5f5 solid;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
}

.doit {
  flex: 1;
}

.goods_img {
  flex: 1;
  margin-right: 10rpx;
}

.cart-thumb {
  width: 200rpx;
  height: 200rpx;
}

.goods_text_box {
  flex: 4;
}

.goods_name {
  width: 280rpx;
  font-size: 32rpx;
  color: #666;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
}

.goods_price {
  font-size: 30rpx;
  color: #ef0000;
  display: block;
  float: right;
}

.goods_numbs {
  font-size: 36rpx;
  color: #333;
  display: block;
  float: left;
  margin-top: 20rpx;
}

.goods_num {
  margin: 0 10rpx;
  padding-top: 6rpx;
  display: inline-block;
}

.goods_reduce, .goods_add {
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  color: #555;
  border: 2rpx #ccc solid;
  display: inline-block;
}

.goods_delate {
  font-size: 32rpx;
  color: #555;
  float: right;
  margin-top: 20rpx;
}

.goods_bot_nav {
  width: 90%;
  padding: 0 5%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  background: #f3f3f3;
  border-top: 2rpx #e2e2e2 solid;
  display: flex;
  align-items: center;
}

.goods_bot_do {
  flex: 1;
  margin-top: 46rpx;
}
.goods_bot_total{
  flex: 4;
}
.goods_bot_do,.goods_bot_text{
  flex: 1;
}
.goods_bot_text{
  text-align: left;
}

.goods_bot_text, .goods_bot_total {
  font-size: 32rpx;
  color: #333;
}
.go_payment{
  background: #ef0000;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
}
