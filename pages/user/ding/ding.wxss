/* 导航 */



.order, .order_box {
    position: relative;
    margin-bottom: 10rpx;
    padding: 0 10rpx 10rpx;
    background: #fff;
    -webkit-transition: -webkit-transform .5s ease-in-out;
    transition: -webkit-transform .5s ease-in-out;
    transition: transform .5s ease-in-out;
    transition: transform .5s ease-in-out,-webkit-transform .5s ease-in-out;
}

.order .order_box_hd_label, .order_box .order_box_hd_label {
    color: #999;
}

.order .order_box_hd, .order_box .order_box_hd {
    position: relative;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 25rpx;
    color: #333;
}

.order_box_hd_del, .order_box .order_box_hd_del {
    position: absolute;
    top: 0;
    right: -10rpx;
    width: 63rpx;
    height: 45rpx;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABoAAAAaBAMAAABbZFH9AAAABGdBT…FYhC1C4jEKgBCMx+IAQtTlodpAvMuQeCrwgHAC8ozgPGUGAJ2jGxlJhoHLAAAAAElFTkSuQmCC) 50% no-repeat;
    background-size: 13px auto;
}

.order_head {
    position: relative;
    min-height: 60rpx;
}

.order_head .oh_content {
    display: block;
    padding: 10px 0;
    position: relative;
}
.order_head text {
    line-height: 1.7em;
    font-size: 25rpx;
    color: #999;
}
.order_head text {
    color: #666;
}
.co_blue {
    color: #3985ff;
}
.co_red {
    color: #e4393c;
}
.order_head .oh_btn.bg_6 {
    background: #f19325;
}

.order_head .oh_btn {
    position: absolute;
    top: 17rpx;
    right: 0;
    display: block;
    width: 180rpx;
    height: 50rpx;
    text-align: center;
    color: #fff;
    line-height: 50rpx;
    z-index: 1;
    border-radius: 2px;
    background: #e4393c;
    font-size: 20rpx;
}
.order_shopBar + .order_item {
    margin-top: 0;
}
.order_item {
    position: relative;
    margin-top: 10rpx;
}
.order_item .oi_content {
    overflow: hidden;
}
.order_item .oi_button, .order_item .oi_content {
    display: block;
}
.order_item .image {
    position: relative;
    display: block;
    width: 140rpx;
    height: 140rpx;
    float: left;
    margin-right: 10rpx;
}
img {
    border: 0 none;
    vertical-align: top;
}
.order_item .oi_content p .count {
    display: inline-block;
    width: 50rpx;
    color: #666;
}

.skuTitle{
    font-size: 30rpx;
}
.navigator-hover .count{
    font-size: 20rpx;
}